@using Abp.Authorization.Roles
@using Abp.Web.Mvc.Extensions
@model Abp.Application.Services.Dto.ListResultDto<LMS.Roles.RoleListDto>

@{
    ViewBag.Title = "Index";
    ViewBag.CurrentPageName = "Roles"; //The menu item will be active for this page.
}

@section styles {
    <style>
        .dataTables_filter > label {
            float: right;
        }

        .table tr th, td {
            text-align: center;
            vertical-align: middle !important;
        }
    </style>
}

<section class="content-header">
    <h1>
        Role
        <small>List</small>
        <button id="CreateNewRoleButton" class="btn btn-info btn-sm pull-right"><i class="fa fa-plus"></i> @L("CreateNewRole")</button>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="roleList" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Name</th>
                                <th>DisplayName</th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                        <tfoot>
                            <tr>
                                <th>Action</th>
                                <th>Name</th>
                                <th>DisplayName</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>


@section scripts {
    @Html.IncludeScript("~/Areas/Admin/Views/Role/Index.js")
    @Html.IncludeScript("~/Areas/Admin/Views/Role/_CreateOrEditModal.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/Common/_PermissionTree.js")
}
