@using Abp.Web.Mvc.Extensions
@using LMS.Web.Areas.Mpa.Navigation
@model Abp.Application.Services.Dto.ListResultDto<LMS.Authorization.Users.Dtos.UserListDto>

@{
    ViewBag.Title = "Index";
    ViewBag.CurrentPageName = PageNames.Common.Users; //The menu item will be active for this page.
}

@section styles {
    <style>
        .dataTables_filter > label {
            float: right;
        }

        .table tr th, td {
            text-align: center;
            vertical-align: middle !important;
        }
    </style>
}

<section class="content-header">
    <h1>
        User
        <small>List</small>
        <button id="CreateNewUserButton" class="btn btn-info btn-sm pull-right"><i class="fa fa-plus"></i> @L("CreateNewUser")</button>
    </h1>
</section>

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-body">
                    <table id="userList" class="table table-bordered table-hover" style="width:100% !important;">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>User Name</th>
                                <th>Full Name</th>
                                <th>Email Address</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Action</th>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>User Name</th>
                                <th>Full Name</th>
                                <th>Email Address</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

@section scripts {
    @Html.IncludeScript("~/Areas/Mpa/Views/User/Index.js")
    @Html.IncludeScript("~/Areas/Mpa/Views/User/_CreateOrEditModal.js")
}
